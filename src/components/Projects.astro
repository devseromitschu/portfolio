---
import { Image } from "astro:assets";
import { ExternalLink } from "lucide-react";

import DiaryImg from "../assets/diary.png";
import DiaryBackground from "../assets/diaryBackground.jpg";

const projects = [
  {
    name: "Burası çok yakında.",
    description:
      "...",
    image: DiaryImg,
    backgroundImage: DiaryBackground.src,
    color: "",
    buttons: [
      { name: "Website", url: "https://xdwdaw.com" },
      { name: "GitHub", url: "https://github.com/x" },
    ],
  },
];
---

<div class="space-y-4">
  {
    projects.map((project) => (
      <div class="items-strech flex w-full flex-col justify-stretch overflow-hidden rounded-2xl border border-white/10 bg-white/5 shadow-sm sm:flex-row">
        <Image
          src={project.image}
          alt={`${project.name} logo`}
          style={
            project.color
              ? { backgroundColor: project.color }
              : {
                  backgroundImage: `url(${project.backgroundImage})`,
                  backgroundPosition: "center",
                  backgroundSize: "cover",
                }
          }
          class="h-40 w-full rounded-t-2xl object-contain object-center p-10 sm:max-h-none sm:w-40 sm:rounded-t-none sm:rounded-l-2xl"
        />
        <div class="flex w-full flex-col justify-between px-4 py-3">
          <div>
            <h1 class="text-xl font-semibold">{project.name}</h1>
            <p class="mt-2 text-gray-100">{project.description}</p>
          </div>
          <div class="flex flex-row flex-wrap items-center gap-2">
            {project.buttons.map((button) => (
              <a
                class="mt-3 flex w-fit items-center space-x-2 rounded-full bg-white/20 px-5 py-2 text-sm transition-transform active:scale-95"
                href={button.url}
                target="_blank"
                rel="noreferrer"
              >
                <ExternalLink className="h-4 w-4" />
                <span>{button.name}</span>
              </a>
            ))}
          </div>
        </div>
      </div>
    ))
  }
</div>
